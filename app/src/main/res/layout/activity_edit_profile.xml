<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EditProfileActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:gravity="center"
        android:layout_above="@id/adViewContainer"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Edit Your Profile"
            android:textAlignment="center"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your username:"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/textUsername"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Username"
            android:background="@drawable/background_edittext"
            android:drawableEnd="@drawable/baseline_account_circle_24"
            android:drawableTint="@color/material_dynamic_secondary50"
            android:drawablePadding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary email:"
            android:textSize="14dp"/>
        <EditText
            android:id="@+id/textEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:background="@drawable/background_edittext"
            android:drawableEnd="@drawable/baseline_email_24"
            android:drawableTint="@color/material_dynamic_secondary50"
            android:drawablePadding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Password:"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/btnChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:paddingVertical="5dp"
            android:paddingHorizontal="20dp"
            android:text="Change Password"
            android:textAlignment="center"
            android:textColor="@color/purple_700"
            android:background="@drawable/background_edittext"
            android:textSize="20sp"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
            android:drawableTint="@color/material_dynamic_secondary50"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:background="@drawable/transparent_background"
            app:cardElevation="5dp"
            >

            <TextView
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="UPDATE"
                android:textSize="18sp"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/adViewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>