<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nutricon.smartcare.activities.SettingsActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cardBtnDelete"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_margin="3dp"
            android:background="@drawable/transparent_background"
            android:src="@drawable/baseline_close_24"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardElevation="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableTint="@color/white"
                android:gravity="center_vertical"
                android:weightSum="2"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="10dp"
                    android:text="MODE"
                    android:textSize="18sp"
                    />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchMode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:thumb="@drawable/thumb"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/transparent_background"
            app:cardElevation="5dp"
            >

            <TextView
                android:id="@+id/btnReminder"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableRight="@drawable/baseline_add_alarm_24"
                android:drawableTint="@color/material_dynamic_secondary50"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:text="Remind Me"
                android:textSize="18sp"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/transparent_background"
            app:cardElevation="5dp"
            >

            <TextView
                android:id="@+id/btnNotifications"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:drawableEnd="@drawable/baseline_notifications_active_24"
                android:drawableTint="@color/material_dynamic_secondary50"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:text="Notification Preference"
                android:textSize="18sp"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="@drawable/transparent_background"
            app:cardElevation="5dp"
            >
        <TextView
            android:id="@+id/btnShare"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:drawableRight="@drawable/baseline_share_24"
            android:drawableTint="@color/material_dynamic_secondary50"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:text="Share SmartCAre App"
            android:textSize="18sp"
            />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="@drawable/transparent_background"
            app:cardElevation="5dp"
            >

        <TextView
            android:id="@+id/btnRate"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:drawableRight="@drawable/baseline_star_rate_24"
            android:drawableTint="@color/material_dynamic_secondary50"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:text="Rate Our App"
            android:textSize="18sp"
            />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="@drawable/transparent_background"
            app:cardElevation="5dp"
            >
        <TextView
            android:id="@+id/btnTerms"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
            android:drawableTint="@color/material_dynamic_secondary50"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:text="Terms of Service"
            android:textSize="18sp"
            />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="@drawable/transparent_background"
            app:cardElevation="5dp"
            >
        <TextView
            android:id="@+id/btnAbout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:drawableRight="@drawable/baseline_info_24"
            android:drawableTint="@color/material_dynamic_secondary50"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:text="About Us"
            android:textSize="18sp"
            />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="@drawable/transparent_background"
            app:cardElevation="5dp"
            >
        <TextView
            android:id="@+id/btnFeedback"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:drawableRight="@drawable/baseline_textsms_24"
            android:drawableTint="@color/material_dynamic_secondary50"
            android:gravity="center_vertical"
            android:paddingHorizontal="10dp"
            android:text="Give Us Feedback"
            android:textSize="18sp"
            />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cardBtnDelete"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="20dp"
        android:drawableRight="@drawable/baseline_warning_amber_24"
        android:drawableTint="@color/material_dynamic_secondary50"
        android:paddingHorizontal="10dp"
        android:text="Danger zone! You won't be able to recover your account once deleted. "
        android:textSize="18sp"
        />



    <androidx.cardview.widget.CardView
        android:id="@+id/cardBtnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        app:cardElevation="5dp"
        >
        <TextView
            android:id="@+id/btnDelete"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/red"
            android:drawableRight="@drawable/baseline_delete_24"
            android:drawableTint="@color/white"
            android:gravity="fill_vertical"
            android:paddingHorizontal="10dp"
            android:text="Delete Account"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
    </androidx.cardview.widget.CardView>

</RelativeLayout>