<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PostItemActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/adViewContainer"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="5dp"
            android:paddingHorizontal="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:gravity="center"
                android:paddingVertical="5dp">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginHorizontal="3dp"
                    android:background="@drawable/transparent_background"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="5dp"
                    app:strokeColor="@color/purple_500"
                    app:strokeWidth="1dp"
                    >

                    <TextView
                        android:id="@+id/textReadingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"
                        android:text="12 min read"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        />

                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="11 Aug 2024"
                    android:layout_weight="1.5"
                    android:textStyle="italic"
                    android:textSize="14sp"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/imageThumbnail"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="fitXY"
                android:src="@drawable/healthcare"
                />

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="Lorem ipsum dolo sit amet. Ipsum dolo sit amet. "
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/purple_500"
                />

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:text="Lorem ipsum dolo sit amet. Ipsum dolo sit amet. Lorem ipsum dolo sit amet. Ipsum dolo sit amet. Lorem ipsum dolo sit amet. Ipsum dolo sit amet. Lorem ipsum dolo sit amet. Ipsum dolo sit amet. Lorem ipsum dolo sit amet. Ipsum dolo sit amet. Lorem ipsum dolo sit amet. Ipsum dolo sit amet. Lorem ipsum dolo sit amet."
                android:textSize="20sp"
                />
            <LinearLayout
                android:id="@+id/tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/transparent_background"
                    app:cardElevation="5dp"
                    app:strokeColor="@color/purple_500"
                    app:strokeWidth="1dp"

                    >

                    <TextView
                        android:id="@+id/tag1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="3dp"
                        android:paddingHorizontal="10dp"
                        android:text="diabetes"
                        android:textSize="18sp"
                        />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/transparent_background"
                    app:cardElevation="5dp"
                    app:strokeColor="@color/purple_500"
                    app:strokeWidth="1dp"

                    >

                    <TextView
                        android:id="@+id/tag2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="3dp"
                        android:paddingHorizontal="10dp"
                        android:text="nutrition"
                        android:textSize="18sp"
                        />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/transparent_background"
                    app:cardElevation="5dp"
                    app:strokeColor="@color/purple_500"
                    app:strokeWidth="1dp"

                    >

                    <TextView
                        android:id="@+id/tag3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="3dp"
                        android:paddingHorizontal="10dp"
                        android:text="lifestyle"
                        android:textSize="18sp"
                        />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/transparent_background"
                        app:cardElevation="5dp"
                        >

                        <TextView
                            android:id="@+id/btnLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/baseline_favorite_border_24"
                            android:drawableTint="@color/material_dynamic_secondary50"
                            android:drawablePadding="5dp"
                            android:padding="5dp"
                            android:text="12"
                            android:textSize="22sp"
                            />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/transparent_background"
                        app:cardElevation="5dp"
                        >

                        <TextView
                            android:id="@+id/btnBookmark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/baseline_bookmark_border_24"
                            android:drawableTint="@color/material_dynamic_secondary50"
                            android:drawablePadding="5dp"
                            android:padding="5dp"
                            android:text="10"
                            android:textSize="22sp"
                            />
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/transparent_background"
                        app:cardElevation="5dp"
                        >

                        <TextView
                            android:id="@+id/btnComment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/baseline_insert_comment_24"
                            android:drawableTint="@color/material_dynamic_secondary50"
                            android:padding="5dp"
                            android:textSize="22sp"
                            />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/transparent_background"
                        app:cardElevation="5dp"
                        >

                        <TextView
                            android:id="@+id/btnShare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/baseline_share_24"
                            android:drawableTint="@color/material_dynamic_secondary50"
                            android:padding="5dp"
                            android:textSize="22sp"
                            />
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comments:"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/commentsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_comment" />
        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:id="@+id/adViewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>